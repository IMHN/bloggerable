<b:loop values='data:posts' var='post'>
  <article class='post' expr:id='"post-" + data:post.id'>
    <!-- Title -->
    <h1 class='post-title'>
      <b:if cond='data:post.title'>
        <data:post.title/>
      <b:else/><!-- fallback -->
        <data:messages.noTitle/>
      </b:if>
    </h1>
    <!-- Body -->
    <div class='post-body post-body-typography'>
      <data:post.body/>
    </div>
  </article>
</b:loop>